@model UserRegisterDTO
@{
    Layout = null;
}

<!doctype html>
<!--[if lte IE 9]> <html class="lte-ie9" lang="en"> <![endif]-->
<!--[if gt IE 9]><!-->
<html lang="en">
 <!--<![endif]-->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Remove Tap Highlight on Windows Phone IE -->
    <meta name="msapplication-tap-highlight" content="no" />

    <link rel="icon" type="image/png" href="~/assets/img/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="~/assets/img/favicon-32x32.png" sizes="32x32">

    <title>Altair Admin v2.20.1 - Login Page v2</title>

    <link href='http://fonts.googleapis.com/css?family=Roboto:300,400,500' rel='stylesheet' type='text/css'>

    <!-- uikit -->
    <link rel="stylesheet" href="~/bower_components/uikit/css/uikit.almost-flat.min.css" />

    <!-- altair admin login page -->
    <link rel="stylesheet" href="~/assets/css/login_page.min.css" />

</head>
<body class="login_page login_page_v2">

    <div class="uk-container uk-container-center">
        <div class="md-card">
            <div class="md-card-content padding-reset">
                <div class="uk-grid uk-grid-collapse">
                    <div class="uk-width-large-2-3 uk-hidden-medium uk-hidden-small">
                        <div class="login_page_info uk-height-1-1" style="background-image: src('~/assets/img/others/loginSc.png')">
                            <div class="info_content">
                                <h1 class="heading_b">Login Page Header</h1>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam aut culpa cumque eaque earum error esse exercitationem fuga, fugiat harum perferendis praesentium quasi qui, repellendus sapiente, suscipit totam! Eaque, excepturi!
                                <p>
                                    <a class="md-btn md-btn-success md-btn-small md-btn-wave" href="javascript:void(0)">More info</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-large-1-3 uk-width-medium-2-3 uk-container-center">
                        <div class="login_page_forms">
                            <div id="login_card">                                                                
                                <div id="register_form">                                 
                                    <h2 class="heading_a uk-margin-medium-bottom">Hesap Oluştur</h2>
                                    <form asp-action="Register" asp-area="Identity" asp-controller="Account" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger" style="color: red"></div>
                                       <div class="uk-form-row">
                                            <label asp-for="Email"></label>
                                            <input asp-for="Email" class="md-input"/>
                                            <span asp-validation-for="Email" style="color: red"></span>
                                        </div>
                                        <div class="uk-form-row">
                                            <label asp-for="Password"></label>
                                            <input asp-for="Password"  class="md-input"/>
                                            <span asp-validation-for="Password" style="color: red"></span>
                                        </div>
                                        <div class="uk-form-row">
                                            <label asp-for="ConfirmPassword"></label>
                                            <input asp-for="ConfirmPassword" class="md-input" />
                                            <span asp-validation-for="ConfirmPassword" style="color: red"></span>
                                        </div>                                     
                                        <div class="uk-margin-medium-top">
                                            <button id="btn-userCreate" type="submit" class="md-btn md-btn-primary md-btn-block md-btn-large">Hesap Oluştur</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- common functions -->
    <script src="~/assets/js/common.min.js"></script>
    <!-- uikit functions -->
    <script src="~/assets/js/uikit_custom.min.js"></script>
    <!-- altair core functions -->
    <script src="~/assets/js/altair_admin_common.min.js"></script>

    <!-- altair login page functions -->
    <script src="~/assets/js/pages/login.min.js"></script>

    <script>
        // check for theme
        if (typeof (Storage) !== "undefined") {
            var root = document.getElementsByTagName('html')[0],
                theme = localStorage.getItem("altair_theme");
            if (theme == 'app_theme_dark' || root.classList.contains('app_theme_dark')) {
                root.className += ' app_theme_dark';
            }
        }
    </script>

</body>
</html>